{%- if section.settings.paragraph!= blank -%}
	<div class="page-width text-{{ section.settings.align }}">
		{{ section.settings.paragraph }}
	</div>
{%- endif -%}


{% schema %}
{
	"name":"自定义文本",
	"settings":[
		{
			"type": "richtext",
			"id": "paragraph",
			"label": "富文本框"
		},
		{
			"type": "select",
			"id": "align",
			"label": "对齐方式",
			"options": [
				{
					"value": "left",
					"label": "左对齐"
				},
				{
					"value": "center",
					"label": "局中"
				},
				{
					"value": "right",
					"label": "右对齐"
				}
			],
			"default": "left"
		}
	],
	"presets": [
		{
			"category": "Image",
			"name": "自定义文本"
		}
	]
}
{% endschema %}